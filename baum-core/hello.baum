  store 4 |box|
  read box |a0|
  println a0 |_|
  write box 5 |_|
  read box |a1|
  println a1 |_|
  void
  
left = |x| |l r| l x
right = |y| |l r| r y

todo = |_| _

chan = |k|
  store (left 0) |box|
  k box

send = |c x k|
  read c |s|
  s (|_| write c (right (left x)) k) (|rc| rc todo (|k2| fork (k2 x) (k 0)))

receive = |c k|
  read c |s|
  s (|_| write c (right (right k)) |_| void) (|se| se (|x| k x) todo)

sender = |c|
  sleep 100 |_|
  putln "Sender" |_|
  send c 5 |_|
  putln "Sent!" |_|
  void

receiver = |c|
  sleep 200 |_|
  putln "Receiver" |_|
  receive c |x|
  putln "Received!" |_|
  println x |_|
  void

main6 = chan |c| fork (receiver c) (sender c)



repeater = fix |self| |s|
  putln s |_|
  sleep 1000 |_|
  self s

