add = prim "add"
print = prim "print"
concat = prim "concat"
readline = prim "readline"
void = prim "void"
fork = prim "fork"
sleep' = prim "sleep"
sleep = |n k| sleep' n (k 0)
is0 = prim "is0"
decr = prim "decr"
store = prim "store"
read = prim "read"
write = prim "write"

putln = |s k| print (concat s "\n") k
println = |s k| print s |_| print "\n" k

fix = |f| (|x| f (|y| (x x) y)) (|x| f (|y| (x x) y))

f = fix |self| |_|
  print "input: " |_|
  readline |input|
  print "hello, " |_|
  print (concat input "!\n") |_|
  self 0

